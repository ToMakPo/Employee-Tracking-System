<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Tracking System</title>

    <!-- STYLES -->
    <link rel="stylesheet" href="./style.css">

    <!-- SCRIPTS -->
    <script defer src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.0/moment.min.js" integrity="sha512-Izh34nqeeR7/nwthfeE0SI3c8uhFSnqxV0sI9TvTcXiFJkMd6fB644O64BRq2P/LA/+7eRvCw4GmLsXksyTHBg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script defer src="./script.js"></script>
</head>
<body>
    <h1>Employee Tracking System</h1>
    <div id="employeeList">
        <table id="employeeTable"></table>

        <div>
            <sup>Click on a row to see more information.</sup>
            <button id="addEmployeeButton">ï¼‹</button>
        </div>
    </div>

    <div id="addEmployeeModal" class="modal">
        <form>
            <h3>Add Employee</h3>
            <table>
                <tr>
                    <th>Name:</th>
                    <td><input name="name" type="text" required></td>
                </tr>
                <tr>
                    <th>Phone Number:</th>
                    <td><input name="phone" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"></td>
                </tr>
                <tr>
                    <th>Role:</th>
                    <td><select name="role" required>
                        <option value="front desk" selected default>Front Desk</option>
                        <option value="manager">Manager</option>
                    </select></td>
                </tr>
                <tr>
                    <th>Start Date:</th>
                    <td><input name="startDate" type="date" required></td>
                </tr>
                <tr>
                    <th>Hourly Pay:</th>
                    <td>
                        <span class="currency"></span>
                        <input name="hourlyPay" type="number" step="0.01" min="0.00" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" required>
                    </td>
                </tr>
            </table>
            <div class="buttonContainer"> 
                <button name="save" type="submit">Save</button>
                <button name="cancel">Cancel</button>
            </div>
        </form>
    </div>

    <div id="editEmployeeModal" class="modal">
        <form>
            <h3>Edit Employee</h3>
            <table>
                <tr>
                    <th>Name:</th>
                    <td><input name="name" type="text" required></td>
                </tr>
                <tr>
                    <th>Phone Number:</th>
                    <td><input name="phone" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"></td>
                </tr>
                <tr>
                    <th>Role:</th>
                    <td><select name="role" required>
                        <option value="front desk" selected default>Front Desk</option>
                        <option value="manager">Manager</option>
                    </select></td>
                </tr>
                <tr>
                    <th>Start Date:</th>
                    <td><input name="startDate" type="date" required></td>
                </tr>
                <tr>
                    <th>End Date:</th>
                    <td><input name="endDate" type="date" required></td>
                </tr>
                <tr>
                    <th>Hourly Pay:</th>
                    <td>
                        <span class="currency"></span>
                        <input name="hourlyPay" type="number" step="0.01" min="0.00" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" required>
                    </td>
                </tr>
            </table>
            <div class="buttonContainer"> 
                <button name="save" type="submit">Save</button>
                <button name="cancel">Cancel</button>
            </div>
        </form>
    </div>
</body>
</html>